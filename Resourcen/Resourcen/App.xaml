<Application x:Class="Resourcen.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Resourcen"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="MyResources.xaml" />
                <ResourceDictionary Source="pack://application:,,,/CustomResources;component/MySpecialResources.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="defaultBackgroundBrush" Color="#F75F79" />
        </ResourceDictionary>
    </Application.Resources>
</Application>